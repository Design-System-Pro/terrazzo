{
  "name": "@terrazzo/cli",
  "description": "CLI for managing design tokens using the Design Tokens Community Group (DTCG) standard and generating code for any platform via plugins.",
  "version": "0.0.0",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "dtcg",
    "cli",
    "w3c design tokens",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "tz": "bin/cli.js",
    "terrazzo": "bin/cli.js"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json -w",
    "lint": "biome check .",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@terrazzo/parser": "workspace:^",
    "@terrazzo/token-tools": "workspace:^",
    "chokidar": "^3.6.0",
    "culori": "^3.3.0",
    "dotenv": "^16.4.5",
    "parse-json": "^8.1.0",
    "piscina": "^3.2.0",
    "svgo": "^3.2.0",
    "yaml": "^2.4.1",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/culori": "^2.1.0",
    "execa": "^8.0.1",
    "msw": "^2.2.13",
    "strip-ansi": "^7.1.0"
  }
}
