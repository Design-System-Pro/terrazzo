{
  "name": "@terrazzo/plugin-tailwind",
  "version": "0.0.3",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "design system",
    "dtcg",
    "w3c",
    "tailwind",
    "css"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm run build:license",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:license": "node ../../scripts/inject-license.js @cobalt-ui/plugin-tailwind dist/index.js",
    "dev": "tsc  -p tsconfig.build.json -w",
    "lint": "biome check .",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "@terrazzo/cli": "workspace:^",
    "tailwindcss": "*"
  },
  "dependencies": {
    "@terrazzo/plugin-css": "workspace:^",
    "@terrazzo/token-tools": "workspace:^"
  },
  "devDependencies": {
    "@terrazzo/cli": "workspace:^",
    "@terrazzo/parser": "workspace:^",
    "tailwindcss": "^3.4.1",
    "yaml": "^2.4.1"
  }
}
