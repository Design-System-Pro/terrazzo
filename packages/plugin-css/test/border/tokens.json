{
  "color": {
    "$type": "color",
    "gray": {
      "$value": "#544741",
      "$extensions": {
        "mode": { "light": "#544741", "dark": "#bbb6b3" }
      }
    }
  },
  "border": {
    "$type": "border",
    "color": {
      "$type": "color",
      "$value": "#a6b0b5",
      "$extensions": {
        "mode": { "light": "#a6b0b5", "dark": "#14171b" }
      }
    },
    "solid": {
      "$value": {
        "color": "{border.color}",
        "width": "1px",
        "style": "solid"
      }
    },
    "dashed": {
      "$type": "border",
      "$value": {
        "color": "{border.color}",
        "width": "1.5px",
        "style": {
          "dashArray": ["0.5rem", "0.25rem"],
          "lineCap": "round"
        }
      }
    },
    "gray": {
      "$type": "border",
      "$value": {
        "color": "{color.gray}",
        "width": "1px",
        "style": "solid"
      }
    },
    "default": {
      "$value": "{border.solid}"
    }
  }
}
