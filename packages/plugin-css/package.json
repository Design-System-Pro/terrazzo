{
  "name": "@terrazzo/plugin-css",
  "description": "Generate CSS from your design tokens schema (requires @terrazzo/cli)",
  "version": "0.0.2",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "design system",
    "dtcg",
    "w3c design tokens",
    "css"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm run build:license",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:license": "node ../../scripts/inject-license.js @terrazzo/plugin-css dist/index.js",
    "dev": "tsc -p tsconfig.build.json -w",
    "lint": "biome check .",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "@terrazzo/cli": "*"
  },
  "dependencies": {
    "@terrazzo/parser": "workspace:^",
    "@terrazzo/token-tools": "workspace:^",
    "@types/culori": "^2.1.0",
    "@types/mime": "^3.0.4",
    "culori": "^3.3.0",
    "mime": "^3.0.0",
    "svgo": "^3.2.0"
  },
  "devDependencies": {
    "@terrazzo/cli": "workspace:^",
    "yaml": "^2.4.1"
  }
}
