{
  "name": "@terrazzo/plugin-js",
  "description": "Generate JS, TS, and JSON from your design tokens schema (requires @cobalt-ui/cli)",
  "version": "1.4.3",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "design system",
    "dtcg",
    "w3c design tokens"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm run build:license",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:license": "node ../../scripts/inject-license.js @cobalt-ui/plugin-js dist/index.js",
    "dev": "tsc -p tsconfig.build.json -w",
    "lint": "biome check .",
    "test": "co build -c ./test/types.tokens.mjs && pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "@terrazzo/cli": "workspace:^"
  },
  "dependencies": {
    "@terrazzo/token-tools": "workspace:^"
  },
  "devDependencies": {
    "@terrazzo/cli": "workspace:^",
    "@terrazzo/parser": "workspace:^",
    "fast-glob": "^3.3.2"
  }
}
