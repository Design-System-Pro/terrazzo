{
  "name": "@terrazzo/parser",
  "description": "Parser/validator for the Design Tokens Community Group (DTCG) standard.",
  "version": "0.0.0",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "dtcg",
    "cli",
    "w3c design tokens",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system",
    "linting",
    "lint"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm run build:license",
    "build:clean": "del dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:license": "node ../../scripts/inject-license.js @cobalt-ui/core dist/index.js",
    "dev": "pnpm run --parallel \"/^dev:.*/\"",
    "lint": "biome check .",
    "dev:ts": "tsc -p tsconfig.build.json --watch",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/code-frame": "^7.24.2",
    "@humanwhocodes/momoa": "^3.0.1",
    "@terrazzo/token-tools": "^0.0.0",
    "@types/babel__code-frame": "^7.0.6",
    "@types/culori": "^2.1.0",
    "@types/deep-equal": "^1.0.4",
    "culori": "^4.0.1",
    "deep-equal": "^2.2.3",
    "is-what": "^4.1.16",
    "merge-anything": "^5.1.7",
    "picocolors": "^1.0.0",
    "scule": "^1.3.0",
    "wildcard-match": "^5.1.3",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "strip-ansi": "^7.1.0"
  }
}
