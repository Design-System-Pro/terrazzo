---
import DocsPagination from '../components/DocsPagination.astro';
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
import Nav from '../components/Nav.astro';
import SkipToMain from '../components/SkipToMain.astro';

import packageJSON from '../../../packages/cli/package.json';

const version = packageJSON.version;
---

<!DOCTYPE html>
<html>
  <head>
    <Head title="Cobalt" />
    <style lang="scss">
      @use '../../tokens' as *;

      .header {
        align-items: center;
        background: token('color.blue.05');
        color: token('color.white');
        display: flex;
        flex-direction: column;
        height: calc(100vh - #{token('space.layout.lg')});
        justify-content: center;
      }

      .features {
        font-size: token('font.size.05');
        margin-bottom: token('space.layout.sm');
        margin-top: token('space.layout.sm');
        text-align: left;
        line-height: 1.8;
      }

      .title {
        font-size: 64pt;
        font-weight: 550;
        margin: 0;
      }
    </style>
  </head>
  <body class="page--home">
    <SkipToMain />
    <Nav />
    <div>
      <header class="header tac">
        <h1 class="title">W3C Design Tokens, Anywhere</h1>
        <div class="features">• Generate TypeScript, Sass, JSON, CSS, and more<br />• Sync with Figma<br />• Use in CI</div>
        <a class="btn" href="/docs/getting-started">Get Started</a>
      </header>
    </div>
    <div class="wrapper">
      <DocsPagination />
    </div>
    <Footer />
  </body>
</html>
