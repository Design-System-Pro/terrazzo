{
  "name": "@terrazzo/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run -r --if-present --filter \"@terrazzo/*\" \"build\"",
    "build:docs": "pnpm run -r --if-present \"build\"",
    "build:examples": "pnpm run -r --parallel --if-present build:tokens",
    "changeset": "changeset",
    "dev": "pnpm run -r --parallel --if-present --filter \"@terrazzo/*\" dev",
    "lint": "pnpm run -r --parallel --if-present lint",
    "test": "pnpm run -r --if-present --aggregate-output --parallel test",
    "prepublishOnly": "pnpm run build",
    "version": "pnpm run build && changeset version && pnpm i --no-frozen-lockfile"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.12.4",
    "del-cli": "^5.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
